<%= bootstrap_form_with(model: [@task, @note], local: true,
  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.form_group do %>
    <%= f.primary @note.persisted? ? "Update Note" : "Create Note" %>
    <% end %>
<% end %>
